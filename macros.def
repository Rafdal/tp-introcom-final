	MACRO	%BACKUP			; Hace backup de los todos los registros 
	psha				; Macro mayormente utilizada por subrutinas
	pshb
	pshx
	pshy
	ENDMAC

	MACRO	%RESTORE		; Restaura todos los registros del stack 
	puly				; Macro mayormente utilizada por subrutinas
	pulx
	pulb
	pula
	ENDMAC
	
	MACRO	%COMTOC			; Compara el valor de una celda con un "carguero tocado"
	ldaa	0,x			; y según el resultado, decide si hundir el barco analizado o no
	cmpa	#CTOCADO	
	beq	chundid
	ENDMAC

	MACRO	%POSIC
	ldx	matgan			; cargo x con la posición inicial de la mat. ganadora
	ldaa	fil_esp			; cargo AccA con la coordenada fila, dada en fil_esp
	ldab	#COL*EL_SIZE
	mul				
	abx				; posiciono x en la celda inicial de la fila dada
	ldab	col_esp			; cargo AccB con la coordenada columna, dada en col_esp
	abx				; Posiciono X en la posición de la matriz con esas coordenadas.
	ENDMAC